<section class="hero is-small has-background-white">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="has-text-weight-bold title">ジャンル一覧</h1>
    </div>
  </div>
</section>

<div class="container has-background-white column is-10 mt-4 box box-radius">
  <%= link_to '新しいジャンルを作成する', new_genre_path, class: "button is-link is-rounded is-fullwidth mb-2" %>
  <table class="table is-fullwidth is-bordered">
    <% @genres.each do |genre| %>
      <tbody>
        <tr class="has-text-centered">
          <td class="is-size-5"><%= genre.name  %></td>
          <td class="is-size-5"><%= link_to "編集", edit_genre_path(genre), class: "button is-rounded is-link" %></td>
          <td class="is-size-5"><%= link_to "削除", genre, data: { confirm: "#{genre.name}を削除してもよろしいですか？" }, class: "button is-rounded is-danger", method: :delete %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
<div class="has-text-centered container column is-8">
  <%= link_to '戻る', root_path, class: "button is-link is-rounded is-fullwidth is-light" %>
</div>
<%= paginate @genres %>
