<section class="hero is-small has-background-white">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="has-text-weight-bold title"><%= t('.sign_in') %></h1>
    </div>
  </div>
</section>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "container has-background-white column is-10 mt-4 box box-radius" }) do |f| %>
  <div class="field columns is-vcentered m-0">
    <%= f.label :email, class: "label column is-2 mb-0" %>
    <%= f.email_field :email, class: "input column is-10 is-fullwidth", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field columns is-vcentered m-0">
    <%= f.label :password, class: "label column is-2 mb-0" %>
    <%= f.password_field :password, class: "input column is-10 is-fullwidth", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox ml-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('.sign_in'), class: "button is-link is-rounded is-fullwidth" %>
  </div>
<% end %>

<div class="has-text-centered container column is-8">
  <%= render "devise/shared/links" %>
</div>